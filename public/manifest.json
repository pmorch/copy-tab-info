{
  "manifest_version": 3,
  "name": "Copy Tab Info",
  "version": "0.1.0",
  "description": "My Chrome Extension",
  "icons": {
    "16": "icons/link-16.png",
    "32": "icons/link-32.png",
    "48": "icons/link-48.png",
    "64": "icons/link-64.png",
    "128": "icons/link-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Copy Tab(s)"
  },
  "permissions": [
    "storage", "activeTab", "clipboardWrite", "contextMenus", "offscreen", "tabs"
  ],
  "options_page": "options/index.html"
}
